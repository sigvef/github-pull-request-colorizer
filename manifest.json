{
  "manifest_version": 2,
  "name": "GitHub Pull Request Colorizer",
  "description": "This extension colorizes pull request listings.",
  "version": "1.15.0",
  "icons": {
    "32": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["https://api.github.com/*", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
